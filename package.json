{
  "name": "khipu-client",
  "version": "1.0.0",
  "description": "Khipu API integration client with TypeScript support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prebuild": "npm run lint",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.46",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@integrations/khipu": "dist/integrations/khipu",
    "@models": "dist/models",
    "@services": "dist/services",
    "@utils": "dist/utils"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@integrations/khipu/(.*)$": "<rootDir>/src/integrations/khipu/$1",
      "^@models/(.*)$": "<rootDir>/src/models/$1",
      "^@services/(.*)$": "<rootDir>/src/services/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1"
    }
  }
}
